# Spot Optimizer Platform - Environment Variables (Development)
# Generated: 2026-01-02
# NOTE: This is a DEVELOPMENT configuration. Change values for production!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/spot_optimizer
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=False

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# =============================================================================
# AWS CREDENTIALS (Leave blank to use IAM role)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-random-64-char-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True
API_LOG_LEVEL=info

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost,http://localhost:80,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
# Legacy support
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# EMAIL SERVICE (SendGrid or AWS SES)
# =============================================================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
AWS_SES_REGION=us-east-1
EMAIL_FROM_ADDRESS=noreply@spotoptimizer.com
EMAIL_FROM_NAME=Spot Optimizer

# =============================================================================
# STRIPE BILLING (Optional - for billing features)
# =============================================================================
STRIPE_API_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
SAFE_MODE=False
GLOBAL_RISK_TTL=1800
HEARTBEAT_TIMEOUT=60
COLLECTION_INTERVAL=30
OPTIMIZATION_COOLDOWN=300
MAX_CONCURRENT_ACTIONS=5

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/spot-optimizer/app.log

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================
ENVIRONMENT=development
DEBUG=True
TESTING=False

# =============================================================================
# KUBERNETES AGENT CONFIGURATION
# =============================================================================
AGENT_NAMESPACE=spot-optimizer
AGENT_IMAGE=spotoptimizer/agent:latest
AGENT_LOG_LEVEL=INFO

# =============================================================================
# PROMETHEUS/MONITORING (Optional)
# =============================================================================
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=9090
METRICS_ENABLED=True

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_HIBERNATION=True
ENABLE_ML_PREDICTIONS=True
ENABLE_HIVE_MIND=True
ENABLE_ADMIN_PORTAL=True
ENABLE_LAB=True
