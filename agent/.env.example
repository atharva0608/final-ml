# AWS Spot Optimizer Agent Configuration
# Copy this file to .env and update with your values

# Central server URL (REQUIRED)
CENTRAL_SERVER_URL=http://your-central-server:5000

# Client token from central server (REQUIRED)
# Get this from: Central Server UI → Clients → Your Client → Token
CLIENT_TOKEN=your-client-token-here

# Agent ID (OPTIONAL - auto-set after first registration)
# Only set this if you want to reuse an existing agent ID
AGENT_ID=

# Heartbeat interval in seconds (default: 30)
HEARTBEAT_INTERVAL=30
